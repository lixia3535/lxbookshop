<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.test.po.Administrator" table="administrators" schema="bookshop">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="loginName">
            <column name="loginName" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="loginPassword">
            <column name="loginPassword" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>